{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest", "node"
    ],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "paths": {
      "@shared/*": [
        "./src/app/shared/*"
      ]
    }
  },
  "files": [
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
